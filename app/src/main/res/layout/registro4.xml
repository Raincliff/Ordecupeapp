<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/TXTCOL"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="372dp"
        android:width="300dp"
        android:background="#ffffff"
        android:gravity="center"
        android:hint="COLINDANTES"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/TXTINTE"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:width="300dp"
        android:background="#ffffff"
        android:gravity="center"
        android:hint="INTEGRIDAD"
        android:inputType="textPassword"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/TXTMENASA"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="272dp"
        android:width="300dp"
        android:background="#ffffff"
        android:gravity="center"
        android:hint="AMENASAS"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/TXTDIM"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="322dp"
        android:width="300dp"
        android:background="#ffffff"
        android:gravity="center"
        android:hint="DIMENCIONES"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/TXTTRAMA"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="122dp"
        android:width="300dp"
        android:background="#ffffff"
        android:gravity="center"
        android:hint="ESTADO CONSERVACION"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/TXTINTER"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="172dp"
        android:width="300dp"
        android:background="#ffffff"
        android:gravity="center"
        android:hint="INTERVENCIONES"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/TXTAFEC"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="222dp"
        android:width="300dp"
        android:background="#ffffff"
        android:gravity="center"
        android:hint="AFECTACIONES"
        android:textAlignment="center" />

    <Button
        android:id="@+id/BTNCONT"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/TXTCOL"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="432dp"
        android:width="200dp"
        android:text="CONTINUAR" />

    <Button
        android:id="@+id/BTN_VOLVER"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/BTNCONT"
        android:layout_alignEnd="@+id/TXTCOL"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="-2dp"
        android:text="VOLVER" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="16dp" />

</RelativeLayout>