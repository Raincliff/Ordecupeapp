<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/TXTCOL"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="360dp"
        android:width="300dp"
        android:background="#ffffff"
        android:gravity="center"
        android:hint="COLINDANTES"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/TXTNOM"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:width="300dp"
        android:background="#ffffff"
        android:gravity="center"
        android:hint="NOMBRE"
        android:inputType="textPassword"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/TXTSECUN"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="310dp"
        android:width="300dp"
        android:background="#ffffff"
        android:gravity="center"
        android:hint="MATERIAL SECUNDARIO"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/TXTTRAMA"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:width="300dp"
        android:background="#ffffff"
        android:gravity="center"
        android:hint="TRAMA"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/TXTCOMP"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="210dp"
        android:width="300dp"
        android:background="#ffffff"
        android:gravity="center"
        android:hint="COMPONENTES ARQUITECTONICOS"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/LBLDATOS"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#515c5d"
        android:gravity="center_vertical|center"
        android:text="REGISTRO"
        android:textAlignment="center"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/TXTPRINC"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="260dp"
        android:width="300dp"
        android:background="#ffffff"
        android:gravity="center"
        android:hint="MATERIAL PRINCIPAL"
        android:textAlignment="center" />

    <Button
        android:id="@+id/BTNCONT"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/TXTCOL"
        android:layout_alignParentTop="true"
        android:layout_marginTop="420dp"
        android:width="200dp"
        android:text="CONTINUAR" />

    <Button
        android:id="@+id/BTN_VOLVER"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/BTNCONT"
        android:layout_alignEnd="@+id/TXTCOL"
        android:layout_marginTop="0dp"
        android:text="VOLVER" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="54dp" />

</RelativeLayout>